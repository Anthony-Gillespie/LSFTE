{
  "manifest_version": 3,
  "name": "LSFTE",
  "description": "Local Storage Feature Toggle Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}